<MudPaper Elevation="6">
    <MudToolBar>
        <MudTextField Value="SearchString" ValueChanged="OnSearchChanged" Class="mb-2 mr-8" Placeholder="Search" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" />
        <EnumSelect Class="mb-2 mr-8" Label="Sort by" MinWidth="175" T="Shared.Enums.SortColumn" SelectedValue="SortColumn" OnSelectedValueChanged="OnSortColumnChanged" />
        <EnumSelect Class="mb-2 mr-8" Label="Sort direction" T="Shared.Enums.SortDirection" SelectedValue="SortDirection" OnSelectedValueChanged="OnSortDirectionChanged" />
        <MudSwitch T="bool" Checked="ShowTileView" CheckedChanged="ToggleTileView" ThumbIconColor="Color.Dark" ThumbIcon="@(ShowTileView ? Icons.Material.Filled.GridView: Icons.Material.Filled.List)" />
    </MudToolBar>
</MudPaper>