@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="isDarkMode"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="((e) => drawerToggle())" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/samuelschnurr/circles" />
    </MudAppBar>
    <MudDrawer @bind-Open="isDrawerOpen">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Circles</MudText>
        </MudDrawerHeader>
        <NavMenu />
        <MudSpacer />
        <MudContainer>
            <MudDivider />
            <MudSwitch @bind-Checked="@isDarkMode" Color="Color.Primary" Size="Size.Small" Class="ma-3" Label="Dark Mode on" LabelPosition="LabelPosition.Start" />
        </MudContainer>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>