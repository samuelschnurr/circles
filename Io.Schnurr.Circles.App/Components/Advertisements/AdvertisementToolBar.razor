@using Io.Schnurr.Circles.App.Store.Board;
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<BoardState> BoardState

<MudPaper Elevation="6">
    <MudToolBar>
        <MudTextField Class="mb-2 mr-8" T="string" ValueChanged="@(async (v) => await OnSearch.InvokeAsync(v))" Placeholder="Search" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" />

        <MudPaper Elevation="0" MinWidth="150px">
            <MudSelect Class="mb-2 mr-8" T="string" Label="Sort by" AnchorOrigin="Origin.BottomCenter" Value="@("Created at")">
                <MudSelectItem Value="@("Created at")" />
                <MudSelectItem Value="@("Title")" />
                <MudSelectItem Value="@("Price")" />
            </MudSelect>
        </MudPaper>

        <MudPaper Elevation="0" MinWidth="150px">
            <MudSelect @bind-Value="SortDirection" Class="mb-2 mr-8" Label="Sort direction" AnchorOrigin="Origin.BottomCenter">
                @foreach (Shared.Enums.SortDirection item in Enum.GetValues(typeof(Shared.Enums.SortDirection)))
                {
                    <MudSelectItem Value="@item">@item</MudSelectItem>
                }
            </MudSelect>
        </MudPaper>

        <MudSwitch T="bool" Checked="ShowTileView" CheckedChanged="ToggleTileView" ThumbIconColor="Color.Dark" ThumbIcon="@(ShowTileView ? Icons.Material.Filled.GridView: Icons.Material.Filled.List)" />
    </MudToolBar>
</MudPaper>