@using Io.Schnurr.Circles.App.Store.Board;
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<BoardState> BoardState

<MudPaper Elevation="6">
    <MudToolBar>
        <MudTextField @bind-Value="SearchString" Class="mb-2 mr-8" Placeholder="Search" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" />

        <MudPaper Elevation="0" MinWidth="175px">
            <EnumSelect Label="Sort by" T="Shared.Enums.SortColumn" SelectedValue="BoardState.Value.SortColumn" OnSelectedValueChanged="OnSortColumnChanged" />
        </MudPaper>

        <MudPaper Elevation="0" MinWidth="150px">
            <EnumSelect Label="Sort direction" T="Shared.Enums.SortDirection" SelectedValue="BoardState.Value.SortDirection" OnSelectedValueChanged="OnSortDirectionChanged" />
        </MudPaper>

        <MudSwitch T="bool" Checked="ShowTileView" CheckedChanged="ToggleTileView" ThumbIconColor="Color.Dark" ThumbIcon="@(ShowTileView ? Icons.Material.Filled.GridView: Icons.Material.Filled.List)" />
    </MudToolBar>
</MudPaper>