<MudFileUpload T="IBrowserFile" @bind-Files="BrowserFile.File" For="For" OnFilesChanged="SetFile" SuppressOnChangeWhenInvalid="true" Accept=".png, .jpg">
    <ButtonTemplate>
        <MudContainer Class="d-flex pa-0">
            <MudText Class="mr-auto align-self-center" Typo="Typo.body2">@FileDisplayString</MudText>
            <MudButton Class="ml-auto my-4"
                       HtmlTag="label"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.CloudUpload"
                       for="@context">
                Upload File
            </MudButton>
        </MudContainer>
    </ButtonTemplate>
</MudFileUpload>