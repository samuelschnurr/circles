@page "/"
@using Io.Schnurr.Circles.App.Components.Board
@using Io.Schnurr.Circles.App.Store.Board;
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<BoardState> BoardState

<PageTitle>Board</PageTitle>

@if (IsLoading())
{
    <ProgressBar/>
    return;
}

<BoardToolBar />

@if (ShowTileView())
{
    <BoardTile />
}
else
{
    <BoardTable />
}