@page "/"
@using Io.Schnurr.Circles.App.Components.Board
@using Io.Schnurr.Circles.App.Store.Board;
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<BoardState> BoardState

<PageTitle>Board</PageTitle>

@if (IsLoading())
{
    <ProgressBar/>
    return;
}

<BoardToolBar OnSearch="HandleSearch" />

@if (ShowTileView())
{
    <BoardTile />
}
else
{
    <BoardTable />
}


@code{
    public async Task HandleSearch(string s)
    {
        // TODO Codebehind
        Console.WriteLine("You searched: " + s);
        await Task.FromResult(0);
    }
}