@page "/"
@using Io.Schnurr.Circles.App.Store.Board;
@using Io.Schnurr.Circles.App.Components.Advertisements
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@inject IState<BoardState> BoardState

<PageTitle>Board</PageTitle>

@if (IsLoading)
{
    <ProgressBar />
    return;
}

<AdvertisementToolBar ShowTileView="ShowTileView" ToggleTileView="HandleToggleTileView" OnSearch="HandleSearch" />

@if (ShowTileView)
{
    <AdvertisementTile />
}
else
{
    <AdvertisementTable />
}