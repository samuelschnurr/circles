@attribute [Route(Routes.Board.Detail)]
@inherits Fluxor.Blazor.Web.Components.FluxorComponent
@using Io.Schnurr.Circles.App.Features.App.Views

<PageTitle>Board</PageTitle>

<NavigationBar OnNavigateBack="NavigateBack" />

@{
    if (ShowLoadingSpinner)
    {
        <AppProgressCircular />
        return;
    }
}

<MudGrid>
    <MudItem xs="12" sm="6">
        <MudImage Elevation="6" Src="https://cache.pressmailing.net/thumbnail/story_hires/64940fdd-8ec9-4854-98f9-e7f7467414b7/image.jpg" Fluid="true" Class="rounded h-100" />
    </MudItem>
    <MudItem xs="12" sm="6" Class="d-flex">
        <MudPaper Elevation="6" Class="flex-grow-1 pa-3">
            <MudText Typo="Typo.h6">@Advertisement!.Title</MudText>
            <MudText Class="mud-text-secondary" Typo="Typo.body2">@Advertisement!.CreatedAt.ToShortDateString()</MudText>
            <MudText Typo="Typo.body2">@Advertisement!.Price.ToCurrency()</MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12">
        <MudPaper Elevation="6" Class="pa-3">
            <MudText Typo="Typo.h6">Description</MudText>
            <MudDivider Class="my-3" />
            <MudText Typo="Typo.body1">@Advertisement!.Description</MudText>
        </MudPaper>
    </MudItem>
</MudGrid>